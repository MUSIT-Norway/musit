# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Setup endpoints

GET           /v1/dataporten/currentUser                 no.uio.musit.microservice.actor.resource.UserResource.currentUser

## Mapping routes, TODO: Remove these endpoints when database is migrated.
GET           /v1/person                                 no.uio.musit.microservice.actor.resource.LegacyPersonResource.search(museumId: Int, search: Option[no.uio.musit.service.MusitSearch])
POST          /v1/person/details                         no.uio.musit.microservice.actor.resource.LegacyPersonResource.details
GET           /v1/person/:id                             no.uio.musit.microservice.actor.resource.LegacyPersonResource.get(id:Long)

## Organization routes, the new actor
GET           /v1/organization                           no.uio.musit.microservice.actor.resource.OrganizationResource.search(museumId: Int, search: Option[no.uio.musit.service.MusitSearch])
POST          /v1/organization                           no.uio.musit.microservice.actor.resource.OrganizationResource.add
PUT           /v1/organization/:orgId                    no.uio.musit.microservice.actor.resource.OrganizationResource.update(orgId:Long)
GET           /v1/organization/:orgId                    no.uio.musit.microservice.actor.resource.OrganizationResource.get(orgId:Long)
DELETE        /v1/organization/:orgId                    no.uio.musit.microservice.actor.resource.OrganizationResource.delete(orgId:Long)

## OrganizationAddress routes, the new actor
GET           /v1/organization/:orgId/address            no.uio.musit.microservice.actor.resource.OrganizationAddressResource.listForOrg(orgId:Long)
POST          /v1/organization/:orgId/address            no.uio.musit.microservice.actor.resource.OrganizationAddressResource.add(orgId:Long)
PUT           /v1/organization/:orgId/address/:id        no.uio.musit.microservice.actor.resource.OrganizationAddressResource.update(orgId:Long, id:Long)
GET           /v1/organization/:orgId/address/:id        no.uio.musit.microservice.actor.resource.OrganizationAddressResource.get(orgId:Long, id:Long)
DELETE        /v1/organization/:orgId/address/:id        no.uio.musit.microservice.actor.resource.OrganizationAddressResource.delete(orgId:Long, id:Long)


