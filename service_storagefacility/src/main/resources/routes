# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# StorageNode endpoints
POST          /v1/museum/:mid/storagenodes                          no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.add(mid: Int)
POST          /v1/storagenodes/museum/:mid/root                     no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.addRoot(mid: Int)
GET           /v1/storagenodes/museum/:mid/root                     no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.root(mid: Int)
GET           /v1/storagenodes/museum/:mid/report                   no.uio.musit.microservice.storagefacility.resource.KdReportResource.getReportByMuseum(mid: Int)
PUT           /v1/storagenodes/moveNode                             no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.moveNode
PUT           /v1/storagenodes/moveObject                           no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.moveObject
GET           /v1/storagenodes/:nodeId                              no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.getById(nodeId: Long)
PUT           /v1/storagenodes/museum/:mid/:nodeId                  no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.update(mid: Int, nodeId: Long)
DELETE        /v1/storagenodes/:nodeId                              no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.delete(nodeId: Long)
GET           /v1/storagenodes/:nodeId/children                     no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.children(nodeId: Long)

# Controls
POST          /v1/storagenodes/:nodeId/controls                     no.uio.musit.microservice.storagefacility.resource.EventResource.addControl(nodeId: Long)
GET           /v1/storagenodes/:nodeId/controls                     no.uio.musit.microservice.storagefacility.resource.EventResource.listControls(nodeId: Long)
GET           /v1/storagenodes/:nodeId/controls/:eventId            no.uio.musit.microservice.storagefacility.resource.EventResource.getControl(nodeId: Long, eventId: Long)

# Observations
POST          /v1/storagenodes/:nodeId/observations                 no.uio.musit.microservice.storagefacility.resource.EventResource.addObservation(nodeId: Long)
GET           /v1/storagenodes/:nodeId/observations                 no.uio.musit.microservice.storagefacility.resource.EventResource.listObservations(nodeId: Long)
GET           /v1/storagenodes/:nodeId/observations/:eventId        no.uio.musit.microservice.storagefacility.resource.EventResource.getObservation(nodeId: Long, eventId: Long)

