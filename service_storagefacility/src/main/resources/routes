# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# StorageNode endpoints
GET           /v1/storagenode/:id                    no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.getById(id: Long)
GET           /v1/storagenode/:id/children           no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.getChildren(id: Long)
POST          /v1/storagenode/:id/validate           no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.validateChildren(id: Long)
GET           /v1/storagenode                        no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.listAll
POST          /v1/storagenode                        no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.add
PUT           /v1/storagenode/:id                    no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.update(id: Long)
DELETE        /v1/storagenode/:id                    no.uio.musit.microservice.storagefacility.resource.StorageUnitResource.delete(id: Long)

POST          /v1/storagenode/:nodeId/control        no.uio.musit.microservice.storagefacility.resource.EventResource.addControl(nodeId: Int)
GET           /v1/storagenode/:nodeId/control        no.uio.musit.microservice.storagefacility.resource.EventResource.listControls(nodeId: Int)