# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Endpoint for generating a 2D barcode (DataMatrix or QR)
# ~~~~
GET         /barcode/:uuid/generate           controllers.BarcodeController.generate(uuid: String, format: Int)

# Endpoints for interacting with templates
# ~~~~
GET         /labels                            controllers.TemplateController.listTemplates
GET         /labels/:templateId/preview        controllers.TemplateController.preview(templateId: Int, format: Int, name: String ?= "Lorem Ipsum", uuid: String ?= "1ab234cd-567e-898f-7e65-4d321c012b34")
# This needs to be POST to ensure clients are able to send a JSON body.
POST        /labels/:templateId/render         controllers.TemplateController.render(templateId: Int, format: Int)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.at(path="/public", file)
