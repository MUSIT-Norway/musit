<configuration>

  <conversionRule conversionWord="coloredLevel"
                  converterClass="play.api.libs.logback.ColoredLevel"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        [%d{yyyy-MM-dd HH:mm:ss.SSS}] [backend] %coloredLevel - %logger{15} - %message%n%xException
      </pattern>
    </encoder>
  </appender>

  <logger name="akka" level="ERROR"/>
  <logger name="slick.jdbc" level="WARN"/>

  <logger name="no.uio.musit" level="ERROR"/>
  <logger name="controllers" level="ERROR"/>
  <logger name="services" level="ERROR"/>
  <logger name="models" level="DEBUG"/>
  <logger name="repositories" level="ERROR"/>

  <root level="ERROR">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>